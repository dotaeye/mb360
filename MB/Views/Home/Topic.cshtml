@{
    ViewBag.Title = "会员权益介绍";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<style>
    * {
        margin: 0;
        padding: 0;
        font-size: 12px;
        box-sizing: border-box;
    }

    img {
        width: 100%;
    }

    button {
        color: #FFF;
        background-color: #0095ff;
        box-shadow: inset 0 1px 0 #66bfff;
        padding: 10px;
        width: 260px;
        text-align: center;
        border: 1px solid #ddd;
        border-color: #07c;
        border-radius: 4px;
    }
</style>
<body>
    <div class="product-list">
        <img src="@Url.Content("~/Content/images/1.jpg")" />
        <img src="@Url.Content("~/Content/images/2.jpg")" />
        <img src="@Url.Content("~/Content/images/3.jpg")" />
        <img src="@Url.Content("~/Content/images/4.jpg")" />

        <div style="margin:20px;text-align:center">
            <button type="button" onclick="buttonClick()">单笔订单满500将自动升级为会员，立即加入</button>
        </div>
    </div>
    <script type="text/javascript">
        function buttonClick() {
            if (WebViewBridge) {
                WebViewBridge.send('goToVip');
            }
        }
    </script>
</body>

</html>
